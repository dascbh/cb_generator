<h1>Listing metadata</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @metadata.each do |metadatum| %>
      <tr>
        <td><%= metadatum.name %></td>
        <td><%= metadatum.content %></td>
        <td><%= link_to 'Show', metadatum %></td>
        <td><%= link_to 'Edit', edit_metadatum_path(metadatum) %></td>
        <td><%= link_to 'Destroy', metadatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

